{
  "name": "api-multifactor-authentication",
  "version": "1.0.0",
  "description": "This project provides an open-source Node.js implementation of multi-factor authentication (MFA) in both GraphQL and REST APIs using TypeScript. It includes a variety of common MFA methods such as SMS-based OTP, Authenticator Apps, FIDO2/U2F, push notifications, biometric authentication, backup codes, and email-based authentication.",
  "main": "main.js",
  "scripts": {
    "dev": "ts-node-dev --exit-child --transpile-only src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "migrate": "npx prisma migrate deploy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/morka17/MFA.git"
  },
  "keywords": [
    "mfa",
    "2fa"
  ],
